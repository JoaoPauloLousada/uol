<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <title>Organiser Home</title>
</head>
<body>
    <h1>Organiser Home</h1>
    <% if (viewModel.error) { %>
        <p style="color: red;"><%= viewModel.error.message %></p>
    <% } else { %>
        <h2>Site Settings</h2>
        <p><%= viewModel.siteSettings.siteName %></p>
        <p><%= viewModel.siteSettings.siteDescription %></p>
        <hr />
        <h2>Published Events</h2>
        <form action="<%= viewModel.event.actions.create.url %>" method="get">
            <button type="submit">Create New Event</button>
        </form>
        <ul>
            <% viewModel.event.published.list.forEach(event => { %>
                <li>
                    <p>
                        <%= event.title %>
                        <form action="<%= viewModel.event.actions.unpublish.url %><%= event.id %>" method="post" style="display: inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to unpublish this event?')">Unpublish</button>
                        </form>
                        <a href="<%= viewModel.event.actions.edit.url %><%= event.id %>">
                            <button type="button">Edit</button>
                        </a>
                        <form action="<%= viewModel.event.actions.delete.url %><%= event.id %>" method="post" style="display: inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                        </form>
                    </p>
                   <p>
                       <%= event.description %>
                   </p>
                   <p>
                       <strong>Tickets:</strong><br/>
                       <% if (event.tickets.full && event.tickets.full.quantity > 0) { %>
                           Full Price: <%= event.tickets.full.quantity %> tickets at £<%= event.tickets.full.price.toFixed(2) %><br/>
                       <% } else { %>
                           Full Price: No tickets available<br/>
                       <% } %>
                       <% if (event.tickets.concession && event.tickets.concession.quantity > 0) { %>
                           Concession: <%= event.tickets.concession.quantity %> tickets at £<%= event.tickets.concession.price.toFixed(2) %>
                       <% } else { %>
                           Concession: No tickets available
                       <% } %>
                   </p>
                   <p>
                       Created at: <%= event.createdDate %><br/>
                       Last Modified at: <%= event.updatedDate %><br/>
                       Published at: <%= event.publishedDate %>
                   </p>
                </li>
            <% }); %>
        </ul>
        <hr />
        <h2>Draft Events</h2>
        <ul>
            <% viewModel.event.draft.list.forEach(event => { %>
                <li>
                   <p>
                       <%= event.title %>
                       <form action="<%= viewModel.event.actions.publish.url %><%= event.id %>" method="post" style="display: inline;">
                           <button type="submit" onclick="return confirm('Are you sure you want to publish this event?')">Publish</button>
                       </form>
                       <a href="<%= viewModel.event.actions.edit.url %><%= event.id %>">
                           <button type="button">Edit</button>
                       </a>
                       <form action="<%= viewModel.event.actions.delete.url %><%= event.id %>" method="post" style="display: inline;">
                           <button type="submit" onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                       </form>
                   </p> 
                   <p>
                       <%= event.description %>
                   </p>
                   <p>
                       <strong>Tickets:</strong><br/>
                       <% if (event.tickets.full && event.tickets.full.quantity > 0) { %>
                           Full Price: <%= event.tickets.full.quantity %> tickets at £<%= event.tickets.full.price.toFixed(2) %><br/>
                       <% } else { %>
                           Full Price: No tickets available<br/>
                       <% } %>
                       <% if (event.tickets.concession && event.tickets.concession.quantity > 0) { %>
                           Concession: <%= event.tickets.concession.quantity %> tickets at £<%= event.tickets.concession.price.toFixed(2) %>
                       <% } else { %>
                           Concession: No tickets available
                       <% } %>
                   </p>
                   <p>
                       Created at: <%= event.createdDate %><br/>
                       Last Modified at: <%= event.updatedDate %>
                   </p>
                </li>
            <% }); %>
        </ul>
        <hr />
        <form action="/auth/organiser/logout" method="post">
            <button type="submit">Logout</button>
        </form>
    <% } %>
</body>
</html>
